<!--订单列表-->
<section class="tab">
    <div class="tab-h">
        <ul>
            <li class="active"><a href="">全部</a></li>
            <li><a href="">处理中</a></li>
            <li><a href="">已取消</a></li>
            <li><a href="">已完成</a></li>
        </ul>
    </div>


    <ul class="orderlist">
        {{#orders}}
        <li>
            <div class="box box1">
              <a href="" class="box-link">订单号: {{orderId}}</a>
              <span class="icon icon13 box-arrow center-vertical"></span>
            </div>
            {{#orderPackageItemList}}
            <div class="orderlist-bag">
                <div class="orderlist-bag-r1">
                    <h2>包裹{{@index}}
                      <span class="text-important">{{sf-package-status status}}</span>
                    </h2>
                    <a href="#" class="text-link">查看物流</a>
                </div>
                <ul class="goodslist">
                    {{#orderGoodsItemList}}
                    <li>
                      <img src="{{imageUrl}}">
                        <h3 class="ellipsis2">{{goodsName}}</h3>
                        <div class="goodslist-c1">
                            <div class="orderlist-num">X{{quantity}}</div>
                            <div class="text-important">¥{{sf.price price}}</div>
                        </div>
                    </li>
                    {{/orderGoodsItemList}}
                </ul>
            </div>
            {{/orderPackageItemList}}
            <div class="orderlist-total">共{{sf-good-count orderPackageItemList}}件商品
              <span class="text-disable">实付金额：</span>
              <span class="text-important">￥{{sf.price totalPrice}}</span>
            </div>

            {{! 待支付状态 }}
            <div class="orderlist-btns">
                <button class="btn btn-normal">取消订单</button>
                <button class="btn btn-normal active">立即付款</button>
            </div>

            {{! 已付款未来审核 }}
            <div class="orderlist-btns">
                <button class="btn btn-normal">取消订单</button>
            </div>

            {{! 已取消}}
            <div class="orderlist-btns">
                <div class="text-disable">已取消</div>
            </div>
        </li>
        {{/orders}}
    </ul>
</section>
<!--订单列表-->