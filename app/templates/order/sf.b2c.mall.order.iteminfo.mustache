<div class="table box goodsinfo">
  <h2>商品信息</h2>
  <div class="table-r1 clearfix">
      <div class="table-r1c1 fl vertical-middle"><img src="{{sf.img picUrl}}"></div>
      <div class="table-r1c3 fr">
          <div class="goodsinfo-price">¥{{sf.price singlePrice}}</div>
          <div class="goodsinfo-num">x{{amount}}</div>
      </div>
      <div class="table-r1c2 goodsinfo-title">
          <h3 class="ellipsis3">{{itemName}}</h3>
      </div>
  </div>
  <ul class="clearfix table-r2">
    {{{spec}}}
  </ul>
  <div class="goodsinfo-r1">运费：0元</div>
  {{#orderCoupon.isHaveAvaliable}}
  <div class="goodsinfo-r2">
  <select id="selectCoupon" class="select">
    <option value="" data-price="0" selected="selected">不使用优惠券</option>
  </select>
  </div>
  {{/orderCoupon.isHaveAvaliable}}
</div>
<div class="order-r3 clearfix box">
  {{#isShowCouponArea}}
    <div class="order-r3r1">优惠券抵扣：¥{{sf.price orderCoupon.discountPrice}}</div>
  {{/isShowCouponArea}}
  <div class="order-r3r2">实际应付款:<span>¥{{sf.price shouldPay}}</span></div>
</div>