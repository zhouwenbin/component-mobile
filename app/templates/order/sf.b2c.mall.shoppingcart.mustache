{{#sf-is-empty scopeGroups}}
<section class="cart-none">
    <p>购物车空空如也～</p>
    <a href="/index.html" class="btn btn-normal btn-radius">去逛逛</a>

    {{^sf-is-login}}
    <a href="/login.html" class="btn btn-normal btn-radius">去登录</a>
    {{/sf-is-login}}
</section>
{{/sf-is-empty}}

{{^sf-is-empty scopeGroups}}

<article class="cart">
<section class="sf-h5-avail-cart">
    <ul>
    {{#scopeGroups}}
        {{#goodItemList}}
        {{#if isValid}}
        <li class="{{#isSelected}}active{{/isSelected}}" {{data 'good'}}>
            <div class="cart-inner">
                <span class="icon icon49 select-item" style="margin: 0 15px;"></span>

                <a href="/detail/{{itemId}}.html">
                    <img src="{{sf-show-img images}}" alt="">
                </a>

                <div class="cart-c1">
                    <a href="/detail/{{itemId}}.html">
                        <h2 class="ellipsis2">{{title}}</h2>
                    </a>
                    <div class="input-num">
                        <button class="btn minus-num">-</button>
                        <input class="input-num" type="text" value="{{quantity}}">
                        <button class="btn plus-num" {{#sf-allow canAddNum}}disabled{{/sf-allow}}>+</button>
                    </div>
                </div>
                <div class="cart-c2">
                    <div class="cart-num">x1</div>
                    <div class="text-important">¥{{sf-selling-price canUseActivityPrice activityPrice price}}</div>

                    {{#sf-is-show-origin canUseActivityPrice activityPrice price}}
                    <del>¥{{sf.price price}}</del>
                    {{/sf-is-show-origin}}
                </div>
            </div>

            {{^sf-is-empty limitDescList}}
            <div class="text-orange">{{#limitDescList}}{{desc}} {{/limitDescList}}</div>
            {{/sf-is-empty}}

            {{#if promotionInfo}}

            {{^sf-is-empty promotionInfo.promotionList}}
            {{#sf-is-avil-promotion promotionInfo.promotionList}}
            <div class="text-orange">{{#promotionInfo.promotionList}}{{useRuleDesc}} {{/promotionInfo.promotionList}}</div>
            {{/sf-is-avil-promotion}}
            {{/sf-is-empty}}

            {{/if}}
            <button class="btn btn-danger remove-item-btn">删除</button>
        </li>
        {{/if}}
        {{/goodItemList}}
    {{/scopeGroups}}
    </ul>

    <ul class="cart-disable">
    {{#scopeGroups}}
        {{#goodItemList}}
        {{#if isValid}}

        {{else}}
        <li class="{{#isSelected}}active{{/isSelected}}" {{data 'good'}}>
            <div class="cart-inner">
                <span class="label label-disabled">已下架</span>

                <a href="/detail/{{itemId}}.html">
                    <img src="{{sf-show-img images}}" alt="">
                </a>

                <div class="cart-c1">
                    <a href="/detail/{{itemId}}.html">
                        <h2 class="ellipsis2">{{title}}</h2>
                    </a>
                </div>
                <div class="cart-c2">
                    <div class="cart-num">X1</div>
                    <div class="text-important">¥{{sf-selling-price canUseActivityPrice activityPrice price}}</div>
                </div>
            </div>
            <button class="btn btn-danger remove-item-btn">删除</button>
        </li>
        {{/if}}
        {{/goodItemList}}
    {{/scopeGroups}}
    </ul>
</section>
</article>



{{#sf-is-over-pay cartFeeItem.actualTotalFee limitAmount}}
<div class="alert-error">亲，海关规定购买多件商品价格总结算不能超过¥1000，请您分多次购买～</div>
{{/sf-is-over-pay}}

<section class="cart-footer">
    <div class="cart-footer-r1">

        <div class="cart-footer-c1 select-all-items">
            <span class="icon icon49" style="{{#sf-select-all scopeGroups}}background-position: -255px -249px;{{/sf-select-all}}"></span>全选
        </div>

        <div class="cart-footer-c2">
            <div class="text-important">¥{{sf.price cartFeeItem.actualTotalFee}}</div>
            <div class="cart-footer-save">已省：¥{{sf.price cartFeeItem.discountFee}}</div>
        </div>

        <button class="btn {{^sf-is-allow-pay scopeGroups cartFeeItem}}btn-disable{{/sf-is-allow-pay}} gotopay" {{#sf-is-allow-pay scopeGroups cartFeeItem}}style="background:#dc3334;"{{/sf-is-allow-pay}} >去结算</button>
    </div>
</section>

{{#if errorDesc}}
<section class="tooltip center overflow-num">
    <div>{{errorDesc}}</div>
</section>
{{else}}

{{#sf-is-over-limit totalNum limitGoodsNum}}
<section class="tooltip center overflow-num">
    <div>您的购物车已满，赶紧去买单哦～</div>
</section>
{{/sf-is-over-limit}}

{{/if}}

