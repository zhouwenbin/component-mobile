<!--订单提交成功-->
<section class="order order-success">
  {{#if showordersuccess}}
    <div class="order-success-r1">
      <h1><span class="icon icon46"></span>订单提交成功！</h1>
	    <p>请您在订单提交后<span class="text-important">{{showSecKillPayTime goodsType}}</span>内完成支付,否则订单会自动取消。</p>
    </div>
  {{/if}}

  <h2>支付方式</h2>
  <ul class="gotopaymethodlist">
     
    {{#sf-paytype-list optionalPayTypeList 'alipay_intl_wap'}}
      <li data-payType="alipay_intl_wap" class="box gotopaymethod">
        <a href="javascript:;" class="icon icon6">支付宝</a><span class="icon icon8"></span>
        {{#sf-show-desc discount 'alipay_intl_wap'}}<span class="first-pay-tips">{{desc}}</span>{{/sf-show-desc}}
      </li>
    {{/sf-paytype-list}}
    
    {{#sf-paytype-list optionalPayTypeList 'alipay_forex_wap'}}
      <li data-payType="alipay_forex_wap" class="box gotopaymethod">
        <a href="javascript:;" class="icon icon6">支付宝</a><span class="icon icon8"></span>
        {{#sf-show-desc discount 'alipay_forex_wap'}}<span class="first-pay-tips">{{desc}}</span>{{/sf-show-desc}}
      </li>
    {{/sf-paytype-list}}

    {{#if showWeixinPay}}
    {{#sf-paytype-list optionalPayTypeList 'wechat_intl_mp'}}
      <li data-payType="wechat_intl_mp" class="box gotopaymethod">
           <a href="javascript:;" class="icon icon43">微信</a><span class="icon icon8"></span>
           {{#sf-show-desc discount 'wechat_intl_mp'}}<span class="first-pay-tips">{{desc}}</span>{{/sf-show-desc}}
      </li>
    {{/sf-paytype-list}}
    {{/if}}
  </ul>

</section>
<!--订单提交成功-->
