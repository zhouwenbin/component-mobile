<section class="cart">
    <ul>
        {{#each goods}}
        <li class="active" {{data 'mixDiscount'}}>
            <div class="cart-inner">
                <span data-isSelected="1" class="icon icon49"></span>
                <a target="_blank" href="http://m.sfht.com/detail/{{itemId}}.html"><img src="{{imageName}}" alt=""></a>
                <div class="cart-c1">
                    <h2 class="ellipsis2"><a target="_blank" href="http://m.sfht.com/detail/{{itemId}}.html">{{productName}}</a></h2>
                </div>
                <div class="cart-c2">
                    <div class="cart-num">X1</div>
                    <div class="text-important">¥{{sf.price sellingPrice}}</div>
                    {{#sf-show-originPrice originPrice sellingPrice}}<del>¥{{sf.price originPrice}}</del>{{/sf-show-originPrice}}
                </div>
            </div>
        </li>
        {{/each}}            
    </ul>
</section>
<section class="mix-total clearfix">
    <div class="mix-total-r1 fl">总共{{totalcount}}件</div>
    <div class="mix-total-r2 fr">
       <div class="mix-total-c1">
           {{#isShowTotalSavePrice totalSavePrice}}<span class="save-tag">立省¥{{sf.price totalSavePrice}}</span>{{/isShowTotalSavePrice}}
            套餐价：<span class="text-important">¥{{sf.price totalSellingPrice}}</span>
       </div> 
       <del>原价：¥{{sf.price totalOriginPrice}}</del>
    </div>
</section>
<section class="nav-cart">
    <div class="nav-cart-r1">
        <button id="mix-products-add" style="margin:0 10px 0 0;width:50%;" class="btn btn-soon">+ 加入购物车</button>
        <button id="mix-products-buy" class="btn btn-danger">立即购买</button>
    </div>
</section>